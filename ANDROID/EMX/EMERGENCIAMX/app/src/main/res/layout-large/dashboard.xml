<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="top|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/addr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:padding="10dp"
                android:text="401 Golden Shore Washington Ave United States"
                android:textSize="18.5sp"
                android:textColor="@color/text_color"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray">


            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cell"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"


            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stroke_border">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp">

                    <at.markushi.ui.CircleButton
                        android:layout_width="74dip"
                        android:layout_height="74dip"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:src="@drawable/call"
                        app:cb_color="@android:color/holo_red_dark"
                        app:cb_pressedRingWidth="8dip" />

                    <TextView
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="20dp"
                        android:text="Call 911"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stroke_border">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <at.markushi.ui.CircleButton
                        android:layout_width="74dip"
                        android:layout_height="74dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/need_help"
                        app:cb_color="@android:color/holo_orange_dark"
                        app:cb_pressedRingWidth="8dip" />

                    <TextView
                        android:id="@+id/nee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="Need Help"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stroke_border">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <at.markushi.ui.CircleButton
                        android:layout_width="74dip"
                        android:layout_height="74dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/shooter"
                        app:cb_color="@android:color/holo_blue_dark"
                        app:cb_pressedRingWidth="8dip" />

                    <TextView
                        android:id="@+id/Act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="10dp"
                        android:text="Active Shooter"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />


                </FrameLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/cell1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"


            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stroke_border">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <at.markushi.ui.CircleButton
                        android:layout_width="74dip"
                        android:layout_height="74dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/imok"
                        app:cb_color="@android:color/holo_green_light"
                        app:cb_pressedRingWidth="8dip" />

                    <TextView
                        android:id="@+id/ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="I'm OK"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stroke_border">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <at.markushi.ui.CircleButton
                        android:layout_width="74dip"
                        android:layout_height="74dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/alarm"
                        app:cb_color="@android:color/holo_purple"
                        app:cb_pressedRingWidth="8dip" />

                    <TextView
                        android:id="@+id/Alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="10dp"
                        android:text="Alarm"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stroke_border">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <at.markushi.ui.CircleButton
                        android:layout_width="74dip"
                        android:layout_height="74dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/rescue"
                        app:cb_color="#DCB712"
                        android:layout_marginBottom="10dp"
                        app:cb_pressedRingWidth="8dip" />

                    <TextView
                        android:id="@+id/National"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="10dp"
                        android:text="Rescue Me"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </FrameLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_border"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <at.markushi.ui.CircleButton
                    android:layout_width="74dip"
                    android:layout_height="74dip"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/sods"
                    app:cb_color="#ff5845B8"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:id="@+id/see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="50dp"
                    android:paddingTop="-10dp"
                    android:text="See Something Do Something"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />
            </FrameLayout>


        </LinearLayout>


        <include
            android:id="@+id/container_header_lyt"
            layout="@layout/poweredby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        </include>


    </LinearLayout>
</RelativeLayout>