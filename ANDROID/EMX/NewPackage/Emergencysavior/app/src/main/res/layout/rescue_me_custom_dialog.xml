<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.PopupOverlay">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
         android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:gravity="center"
                android:orientation="vertical">

                <at.markushi.ui.CircleButton
                    android:id="@+id/emergency_earthquake"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@drawable/earthqu"
                    app:cb_color="#D44848"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:id="@+id/txt_earthquake"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Earthquake"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <at.markushi.ui.CircleButton
                    android:id="@+id/emergency_flood"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@drawable/flood"
                    app:cb_color="#7A59ED"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:id="@+id/txt_flood"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Flood"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:gravity="right|center"
                android:orientation="vertical">

                <at.markushi.ui.CircleButton
                    android:id="@+id/emergency_storms"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@drawable/storm"
                    app:cb_color="#3277DD"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:id="@+id/txt_storms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Storms"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <at.markushi.ui.CircleButton
                    android:id="@+id/emergency_tsunami"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@drawable/tsunami"
                    app:cb_color="#D49B48"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:id="@+id/tx_tsunami"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Tsunami"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <at.markushi.ui.CircleButton
                    android:id="@+id/emergency_volcanoe"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@drawable/volcano"
                    app:cb_color="#AB2BCF"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:id="@+id/txt_volcanoes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Volcano "
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <at.markushi.ui.CircleButton
                    android:id="@+id/emergency_iamok"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@drawable/imok"
                    app:cb_color="#98C42F"
                    app:cb_pressedRingWidth="8dip" />

                <TextView
                    android:id="@+id/txt_iamok"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="I'm ok"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
