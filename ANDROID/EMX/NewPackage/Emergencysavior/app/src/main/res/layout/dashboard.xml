<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="top|center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/addr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="No address found"
                    android:textColor="@color/text_hint_color"
                    android:textSize="18.5sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:background="@android:color/darker_gray">


                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/call1"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@drawable/call"
                            app:cb_color="@android:color/holo_red_dark"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="20dp"
                            android:text="Call 911"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/need_help"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@drawable/need_help"
                            app:cb_color="@android:color/holo_orange_dark"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/nee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:text="Need Help"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/activeshooter"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@drawable/shooter"
                            app:cb_color="@android:color/holo_blue_dark"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/Act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:text="Active Shooter"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />


                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cell1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"


                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/iamok"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@drawable/imok"
                            app:cb_color="@android:color/holo_green_light"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/ok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:text="I'm OK"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/alarm"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@drawable/alarm"
                            app:cb_color="@android:color/holo_purple"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/Alarm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:text="Alarm"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/btn_rescue_Me"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@drawable/rescue"
                            app:cb_color="#DCB712"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/National"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:text="Rescue Me"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/social"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_border">

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="80dp">

                            <at.markushi.ui.CircleButton
                                android:id="@+id/see_something"
                                android:layout_width="64dip"
                                android:layout_height="64dip"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:onClick="buttonOnClick"
                                android:src="@drawable/sods"
                                app:cb_color="#ff5845B8"
                                app:cb_pressedRingWidth="8dip" />

                            <TextView
                                android:id="@+id/see"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="20dp"
                                android:text="Do Something"
                                android:textColor="@color/text_color"
                                android:textSize="13sp" />

                        </FrameLayout>


                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/facebook"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@mipmap/facebook"
                            app:cb_color="#3b5998"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/txt_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="20dp"
                            android:text="Share"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                    </FrameLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_border">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/twitter"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:onClick="buttonOnClick"
                            android:src="@mipmap/twitter_icon"
                            app:cb_color="#55acee"
                            app:cb_pressedRingWidth="8dip" />

                        <TextView
                            android:id="@+id/txt_twitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="20dp"
                            android:text="Tweet"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />

                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <include
            android:id="@+id/container_header_lyt"
            layout="@layout/poweredby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </include>

    </LinearLayout>
</LinearLayout>