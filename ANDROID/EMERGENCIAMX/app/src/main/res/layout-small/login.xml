<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/linearborder"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_launcher"
           android:drawablePadding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="LOGIN"
            android:textColor="@color/text_color_heading"
            android:textSize="10sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lineralayout2"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/input_Email"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/user"
                    android:hint="Type Email"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/ll2"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/text_hint_color" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#999999" />

                <EditText
                    android:id="@+id/input_Password"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/pass"
                    android:hint="Type Password"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/ll2"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/text_hint_color" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Forgot password?"
                        android:textColor="@color/text_color_heading"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/btn_login"
                        android:layout_width="74dip"
                        android:layout_height="74dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/arrow_login"
                        app:cb_color="@color/actionbutton"
                        app:cb_pressedRingWidth="8dip" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/OR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="(OR)"
                        android:textColor="@color/text_color_heading"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.andexert.library.RippleView
                    android:id="@+id/more"
                    rv_centered="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_sign_up"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bluebutton"
                        android:drawableLeft="@drawable/signup_icon"
                        android:ems="13"
                        android:gravity="center_horizontal|center"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:text="SIGN UP"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold" />
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/more1"
                    rv_centered="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_activate"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/orrangebutton"
                        android:drawableLeft="@drawable/actv_icon"
                        android:drawablePadding="1dp"
                        android:ems="13"
                        android:gravity="center_horizontal|center"
                        android:paddingLeft="40dp"

                        android:paddingRight="37dp"
                        android:text="Activate"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold" />
                </com.andexert.library.RippleView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <include
            android:id="@+id/container_header_lyt"
            layout="@layout/poweredby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </include>
    </LinearLayout>


</LinearLayout>