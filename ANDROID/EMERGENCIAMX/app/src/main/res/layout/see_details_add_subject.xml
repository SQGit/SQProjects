<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/bottomvalue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lineralayout2"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lineralayout2"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Name"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_alias_name"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_alias_name"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Alias Name"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_height"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_height"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Height"
                        android:inputType="number"
                        android:nextFocusDown="@+id/edt_weight"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_weight"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Weight"

                        android:inputType="number"
                        android:nextFocusDown="@+id/edt_race"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_race"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Race"

                        android:nextFocusDown="@+id/spr_gender"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <Spinner
                        android:id="@+id/spr_gender"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.0"
                        android:hint="Gender"
                        android:nextFocusDown="@+id/edt_age"
                        android:paddingTop="13sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/text_hint_color"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_age"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"

                        android:hint="Age"
                        android:inputType="number"
                        android:nextFocusDown="@+id/edt_eye_color"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_eye_color"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Eye Color"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_glassess"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_glassess"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Glasses"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_haircolor"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_haircolor"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Hair Color"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_clothing"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_clothing"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Clothing"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_address"

                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_address"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Address/City"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_state"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Spinner
                        android:id="@+id/spr_state"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.0"
                        android:drawableRight="@drawable/phone"
                        android:hint="state"
                        android:nextFocusDown="@+id/edt_add_info"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/text_hint_color"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/edt_add_info"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Additional Info"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/additional_information"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="38dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/add"
                android:gravity="right"
                android:paddingLeft="160dp"
                android:text="Add Another Subject"
                android:textColor="@color/text_color_heading"
                android:textSize="12sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/additional_information_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linearloaut_additional"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_additional__name"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Name"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__alias_name"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_additional__alias_name"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Alias Name"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__height"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_additional__height"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Height"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__weight"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_additional__weight"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Weight"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__race"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_additional__race"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Race"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__gender"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />


                    <Spinner
                        android:id="@+id/spr_additional_gender"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.0"
                        android:hint="Gender"
                        android:nextFocusDown="@+id/edt_additional__age"
                        android:paddingTop="13sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/text_hint_color"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_additional__age"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Age"
                        android:inputType="number"
                        android:nextFocusDown="@+id/edt_additional__eye_color"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_additional__eye_color"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Eye Color"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__glassess"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_additional__glassess"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Glasses"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__haircolor"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_additional__haircolor"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Hair Color"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__clothing"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_additional__clothing"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Clothing"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__address"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />

                    <EditText
                        android:id="@+id/edt_additional__address"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Address/City"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@+id/edt_additional__state"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Spinner
                        android:id="@+id/spr_additional__state"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.0"
                        android:drawableRight="@drawable/phone"
                        android:hint="state"
                        android:nextFocusDown="@+id/edt_additional_add_info"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/text_hint_color"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/edt_additional_add_info"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="start|center"
                        android:hint="Additional Info"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/text_hint_color" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/foc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <com.andexert.library.RippleView

            rv_centered="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_previous"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/orrangebutton"
                android:drawableLeft="@drawable/btn_back"
                android:drawablePadding="5dp"
                android:ems="7"
                android:gravity="start|center"
                android:paddingLeft="20dp"
                android:text="Back"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            rv_centered="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_next"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/orrangebutton"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/btn_next"
                android:ems="7"
                android:gravity="center|end"
                android:paddingRight="20dp"
                android:text="Next"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
        </com.andexert.library.RippleView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center">

        <include
            android:id="@+id/container_header_lyt"
            layout="@layout/poweredby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </include>

    </LinearLayout>
</LinearLayout>