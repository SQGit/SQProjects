<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="@drawable/linearborder"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:paddingLeft="30dp"
            android:contentDescription="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_launcher"
            android:paddingLeft="110dp"
            android:paddingRight="110dp"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:drawablePadding="10dp"
            android:text="LOGIN"
            android:textColor="@color/text_color_heading"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="15dp">

        <!-- <android.support.v7.widget.CardView

             style="@style/MyCardViewStyle"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:elevation="100dp"
             card_view:cardCornerRadius="5dp">-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/lineralayout2"
            android:padding="10dp">

            <EditText
                android:id="@+id/input_Email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#00000000"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/user"
                android:hint="Type Email"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/ll2"

                android:singleLine="true"
                android:textColor="#000000" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#000000" />

            <EditText
                android:id="@+id/input_Password"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#00000000"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/pass"
                android:hint="Type Password"
                android:inputType="textCapSentences"
                android:nextFocusDown="@+id/ll2"
                android:singleLine="true"
                android:textColor="#000000" />


        </LinearLayout>
        <!-- </android.support.v7.widget.CardView>-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Forgot password?"
                    android:textColor="@color/text_color_heading"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <at.markushi.ui.CircleButton
                    android:layout_width="84dip"
                    android:layout_height="84dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/arrow_login"
                    app:cb_color="@color/actionbutton"
                    app:cb_pressedRingWidth="8dip" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/OR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="(OR)"
                    android:textColor="@color/text_color_heading"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.andexert.library.RippleView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                rv_centered="true">

            <Button
                android:id="@+id/btn_sign_up"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bluebutton"
                android:drawableLeft="@drawable/signup_icon"
                android:ems="13"
                android:paddingLeft="40dp"
                android:paddingRight="50dp"
                android:text="SIGN UP"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
        </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                rv_centered="true">
            <Button
                android:id="@+id/btn_activate"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/orrangebutton"
                android:drawableLeft="@drawable/actv_icon"
                android:ems="13"
                android:drawablePadding="1dp"
                android:paddingLeft="40dp"
                android:paddingRight="50dp"
                android:text="Activate"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
            </com.andexert.library.RippleView>
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/container_header_lyt"
        layout="@layout/poweredby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

    </include>


</LinearLayout>