<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="ques"
        android:text="111111111111111 normal 11111111111"
        android:visibility="gone"/>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:text="vsdsgdsafgsdg"
        android:visibility="gone"
        android:padding="10dp"

        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/dss">

    </Button>

    <LinearLayout
        android:id="@+id/llInviteOthers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:clickable="true"
        android:visibility="gone"
        style="@android:style/MediaButton"
       >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vhjhkjhfgsdxfjhs"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/background_light"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/dss"

        android:gravity="center|top">

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicator="BallSpinFadeLoader"
            app:indicator_color="#006de8" />

    </LinearLayout>


    <include
        android:id="@+id/container_header_lyt"
        layout="@layout/poweredby"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </include>




</RelativeLayout>
