<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/soft_grey_choose"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="16.5"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/qc_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cal_view"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">



            <TextView
                android:id="@+id/sno_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B.No"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B.No"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/shift_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shift"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/machine_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Machine"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/operator_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operator"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="vertical">


            <TextView
                android:id="@+id/part_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Part"
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/subpart_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/approved_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/rejected_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dis_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dis_pen_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unchecked"
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qty_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Quantity"
                android:layout_gravity="top"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/status_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>