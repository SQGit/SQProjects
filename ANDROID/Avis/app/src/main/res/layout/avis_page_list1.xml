            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cellshape1"
                    android:ems="10"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/_5sdp"
                    android:text="Panel/Issue\n"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sdp" />

                <TextView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cellshape1"
                    android:ems="7"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/_5sdp"
                    android:text="Ramp $$ \nAmount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sdp" />

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cellshape1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Repair Yes \nor No"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sdp" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cellshape1"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="ABG Cost of\n Repair"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false">

                </ListView>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/footer_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">


                <EditText
                    android:id="@+id/panalissue_tv"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />

                <EditText
                    android:id="@+id/moneyEditText"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />


                <EditText
                    android:id="@+id/moneyEditText"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />

                <EditText
                    android:id="@+id/moneyEditText"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/panalissue_tv"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />

                <EditText
                    android:id="@+id/moneyEditText"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="Total Ramp Cost"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_5sdp" />


                <EditText
                    android:id="@+id/moneyEditText"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="Less Smart Repairs"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/moneyEditText"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="New Ramp Cost"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_5sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/panalissue_tv"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/cellshape"
                    android:ems="15"
                    android:enabled="false"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />

                <EditText
                    android:id="@+id/ramp_et"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:editable="false"
                    android:hint="$ 0"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_7sdp" />


                <EditText
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_7sdp" />

                <EditText
                    android:id="@+id/abgrepair"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cellshape"
                    android:editable="false"
                    android:hint="$ 0"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_7sdp" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
