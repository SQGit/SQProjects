<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#339CC4"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Lproducts">
        <ImageView
            android:id="@+id/imageView51"
            android:layout_width="25dp"
            android:layout_height="50dp"

            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/products1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="2.06"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:paddingLeft="2dp"
            android:text="Products"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold" />
</LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="350dp"
                        android:layout_height="235dp"
                        android:layout_weight="1"
                        android:background="@drawable/barrel" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="350dp"
                        android:layout_height="235dp"
                        android:layout_weight="1"
                        android:background="@drawable/cardboard" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#339CC4"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/products_barrels"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="2dp"
                        android:text="BARRELS"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/products_cardboard"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="2dp"
                        android:text="CARDBOARD BOXES"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="fill_parent"
                        android:layout_height="185dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:background="@drawable/crates" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#339CC4"
                    >


                    <TextView
                        android:id="@+id/products_crates"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="2.06"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="CRATES"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/products7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WE  DELIVER  TO  AND  COLLECT FROM"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/products8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:text="> CAMBRIDGE\n> ESSEX\n> HERTFORDSHIRE\n> KENT\n> LONDON\n> LUTON\n> MIDDLESEX\n> MILTON KEYNES\n> OXFORD\n> SURREY\n> BEDFORDSHIRE\n> NOTTINGHAM"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                       <!-- android:textStyle="bold" -->

                        <TextView
                            android:id="@+id/products8_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:inputType="textMultiLine"
                            android:textSize="16sp"
                            android:text="> BIRMINGHAM\n> MANCHESTER\n> NORTHAMPTON\n> SOUTHAMPTON\n> LEEDS\n> EDMONTON\n> TOTTENHAM\n> EAST LONDON\n> DERBY\n> and Surrounding Areas"
                            android:textColor="#FFFFFF"/>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/products9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:text="WE  SHIP :"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barrels,boxes,crates,motorbikes,cars,vans,furniture,part loads,20ft/40ft containers(*exclusions apply)."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFFFFF"
                         />

                    <ImageView
                        android:id="@+id/imageView37"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/s6" />

                    <TextView
                        android:id="@+id/products11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="WE SHIP TO JAMAICA"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="ROUTE 1-KINGSTON WHARF"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="We can ship your goods from the UK straight to Kingston wharf where your receiver will need to collect them after paying their office charge, wharf charge and customs duty."
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="ROUTE 12-MONTEGO BAY WHARF"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="We can ship your goods from the UK straight to Montego Bay wharf where your receiver will need to collect them after paying their office charge, wharf charge and customs duty."
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="ROUTE 3-HOME DELIVERY"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="We can safely deliver your goods straight to your receiver&apos;s home. Please note that the customs duty is payable by your receiver on delivery."
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="18dp"
                        android:text="WE  SHIP  TO-EASTERN CARIBBEAN"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/products19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="PLEASE  SEE  SHIPPING AREAS  FOR DETAILS"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFFFFF"
                         />

                    <ImageView
                        android:id="@+id/imageView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/s7" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

