<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:id="@+id/linear1"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:id="@+id/linear_logout"
    android:layout_marginRight="8dp"
    android:layout_marginTop="1dp"
    >
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/logout"
        android:background="@mipmap/logout"
        android:layout_marginTop="4dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="right" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Logout"
        android:textSize="17sp"
        android:textColor="#30BCDD"
        android:id="@+id/tvlogout"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:weightSum="1">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center"
        android:background="@mipmap/logo"
        android:layout_centerHorizontal="true"/>



    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/linear3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/product_db"
            android:id="@+id/prod_db"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Products"
            android:id="@+id/textView"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/prod_db"/>

    </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"
       />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:layout_weight="1"

            android:id="@+id/linear4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ship_db"
                android:id="@+id/ship_db"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Shipping"
                android:id="@+id/textView1"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"

                android:layout_below="@+id/ship_db"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="115dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="28dp"/>

        <View
            android:layout_width="115dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"

            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/linear5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/aboutus_db"
                android:id="@+id/gall_db"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="About Us"
                android:id="@+id/textView3"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/prod_db"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"
          />

        <LinearLayout
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linear6">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/quote_db"
                android:id="@+id/qou_db"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Quote"
                android:id="@+id/textView4"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/ship_db"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="115dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="28dp"/>

        <View
            android:layout_width="115dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/linear7">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
               android:background="@drawable/contact_db"
                android:id="@+id/cont_db"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Contacts"
                android:id="@+id/textView5"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/prod_db"/>

        </LinearLayout>



        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/linear8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/offers_db"
                android:id="@+id/off_db"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Offers"
                android:id="@+id/textView6"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/ship_db"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</ScrollView>
</LinearLayout>
