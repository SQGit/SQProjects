<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/grp_jn_bg"
    android:orientation="vertical"
    android:paddingTop="25dp">


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/bckbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/back"

            />

    </com.balysv.materialripple.MaterialRippleLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rey.material.widget.EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:hint="City"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="#424242"
            android:textSize="21sp"
            app:et_autoCompleteMode="single"
            app:et_dividerColor="#9e9e9e"
            app:et_dividerHeight="1dp"
            app:et_dividerPadding="2dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="#9e9e9e"
            app:et_labelTextSize="12sp" />

        <ImageButton
            android:id="@+id/bckbtns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@mipmap/down"

            />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rey.material.widget.EditText
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:hint="Area"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="#424242"
            android:textSize="21sp"
            app:et_autoCompleteMode="single"
            app:et_dividerColor="#9e9e9e"
            app:et_dividerHeight="1dp"
            app:et_dividerPadding="2dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="#9e9e9e"
            app:et_labelTextSize="12sp" />


        <ImageButton
            android:id="@+id/bckbtnss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@mipmap/down" />
    </FrameLayout>


    <com.rey.material.widget.ListView
        android:id="@+id/lview"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_height="200dp" />


    <com.rey.material.widget.Button
        android:id="@+id/send"
        style="@style/Material.Drawable.Ripple.Touch"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#212121"
        android:drawableLeft="@mipmap/arrow"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Join"
        android:textColor="#ffffff"
        android:textSize="22sp" />


</LinearLayout>