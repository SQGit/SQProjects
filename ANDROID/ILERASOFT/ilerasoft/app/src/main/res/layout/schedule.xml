<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#EE7115"
                android:drawableLeft="@drawable/selector_mybookings"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:paddingLeft="10dp"
                android:text="My Booking"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/selector_availability"
                android:minHeight="50dp"
                android:minWidth="80dp"
                android:text="Availability "
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:minWidth="100dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_negative_selector"
                    android:drawableLeft="@drawable/calendar_icon"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:hint="FROM DATE"
                    android:minHeight="60dp"
                    android:minWidth="100dp"

                    android:paddingLeft="15dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_negative_selector"
                    android:drawableLeft="@drawable/calendar_icon"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:hint="TO DATE"
                    android:minHeight="60dp"
                    android:minWidth="100dp"
                    android:paddingLeft="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#D03334"
                android:gravity="center"
                android:minHeight="60dp"
                android:orientation="horizontal">


                <RadioGroup
                    style="@style/Searchtype"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:minHeight="60dp">


                    <RadioButton
                        android:id="@+id/radio0"
                        style="@style/SearchtypeRADIO"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customuttonackground"
                        android:checked="true"
                        android:minHeight="60dp"
                        android:minWidth="150dp"
                        android:text="TODAY"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radio1"
                        style="@style/SearchtypeRADIO"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customuttonackground"
                        android:minHeight="60dp"
                        android:minWidth="150dp"
                        android:text="3 DAY"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radio2"
                        style="@style/SearchtypeRADIO"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/customuttonackground"
                        android:minHeight="60dp"
                        android:minWidth="150dp"
                        android:text="WEEK"
                        android:textSize="20sp" />

                </RadioGroup>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible">


            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/searchedit">

                <EditText
                    android:id="@+id/ed"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"

                    android:cursorVisible="false"
                    android:freezesText="true"
                    android:paddingLeft="10dp"
                    android:singleLine="true"

                    android:textSize="25dp" />

                <Spinner
                    android:id="@+id/my_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:textSize="20sp">

                </Spinner>
            </FrameLayout>


            <TextView
                android:id="@+id/iv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/calendar_icon"
                android:text="From"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/iv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/calendar_icon"
                android:text="To "
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>