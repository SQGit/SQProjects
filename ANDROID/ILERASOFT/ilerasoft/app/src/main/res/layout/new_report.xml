<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/equipment_Id"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="EquipmentID"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:singleLine="true"

            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_gravity="center"

            android:orientation="vertical">


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="13dp"
                android:paddingLeft="10dp"
                android:text="Booking Date"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:singleLine="true"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/Booking_Date"
                android:layout_width="250dp"
                android:singleLine="true"

                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:text="date"
                android:textColor="@color/black"
                android:textSize="24dp" />


            <TextView
                android:id="@+id/Booking_time"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/timer_icon"
                android:drawablePadding="19dp"
                android:paddingLeft="10dp"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:singleLine="true"


                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_gravity="center"

            android:orientation="vertical">


            <TextView
                android:id="@+id/Reference"
                android:singleLine="true"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/state_icon"
                android:drawablePadding="13dp"
                android:text="Reference No"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Reference_Id"
                android:layout_width="300dp"
                android:singleLine="true"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:text="Reference No"
                android:textColor="@color/black"
                android:textSize="24dp"

                />


        </LinearLayout>

        <Button
            android:id="@+id/cancelnow"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/selector"
            android:gravity="center">

        </Button>


    </LinearLayout>


</LinearLayout>