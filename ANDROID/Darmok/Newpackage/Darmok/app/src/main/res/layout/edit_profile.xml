<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/custom_tittle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|top"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Edit Profile"
            android:textAlignment="0"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edt_first_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/First_Name"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_last_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Last_Name"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_middle_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Middle_Name"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Phone_number"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Address"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_favorite_restaturant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:focusable="false"
                android:hint="@string/Favorite_Restaturant"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_spouse_first_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/Spouse_first_name"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_favorite_friend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Favorite_friend"
                android:backgroundTint="@android:color/white"
                android:singleLine="true"
                android:focusable="false"

                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_number_of_children"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Number_of_children"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />

            <EditText
                android:id="@+id/edt_child_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Child_name"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_Workplace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Workplace"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />

            <EditText
                android:id="@+id/edt_Work_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Work_location"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />


            <EditText
                android:id="@+id/edt_favorite_sport"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Favorite_sport"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />

            <EditText
                android:id="@+id/edt_favorite_pastime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Favorite_pastime"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_birthday"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Birthday"
                android:focusable="false"
                android:singleLine="true"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/edt_Authorization_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Authorization_code"
                android:singleLine="true"
                android:focusable="false"
                android:backgroundTint="@android:color/white"
                android:textColorHint="@android:color/background_light"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">


    </LinearLayout>


</LinearLayout>