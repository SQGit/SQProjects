<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back2"
        android:drawableLeft="@drawable/back_icon"
        android:paddingLeft="25dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textAllCaps="false"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:ems="4"
        android:textStyle="bold"
        android:text="Back"
        android:textColor="#FFF"
        android:textSize="35sp"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:layout_marginLeft="-170dp"
            android:text="Modify Inspection"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="40sp"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:background="@drawable/all_text_head"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="180dp"
        android:id="@+id/linearLayout2">


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edt_unitno"
                android:hint="Unit No"
                android:singleLine="true"
                android:textSize="35sp"
                android:ems="13"
                android:maxLength="10"
                android:textColorHint="#2054be"
                android:textColor="#2054be"
                android:textStyle="bold"
                android:paddingBottom="60dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_email_icon"
                android:layout_marginRight="250dp"
                android:layout_marginLeft="250dp"
                android:background="@drawable/background_edittext"
                android:layout_gravity="center"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edt_agrementno"
                android:hint="Rental Agreement No"
                android:textSize="35sp"
                android:textColorHint="#2054be"
                android:textColor="#2054be"
                android:textStyle="bold"
                android:ems="13"
                android:maxLength="10"
                android:singleLine="true"
                android:paddingBottom="60dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_email_icon"
                android:layout_marginRight="250dp"
                android:layout_marginLeft="250dp"
                android:background="@drawable/background_edittext"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <Button
                android:id="@+id/textView_captureimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:ems="8"
                android:textAllCaps="false"
                android:layout_marginLeft="80dp"
                android:background="@drawable/button_background"
                android:drawableRight="@drawable/camera_icon"
                android:textSize="35sp"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="#FFF"
                android:text="Capture Image"
                />


            <TextView
                android:id="@+id/textView_finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finished"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginLeft="45dp"
                android:textColor="#35476B"
                android:textSize="40dp"/>


        </LinearLayout>



        <com.github.gcacace.signaturepad.views.SignaturePad
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:id="@+id/signature_pad"
            android:ems="4"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:drawableLeft="@drawable/sign_hand_icon"
            android:background="@drawable/customer_sign_background"/>







        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"
            android:drawableRight="@drawable/submit_arrow"
            android:padding="10dp"
            android:ems="4"

            android:layout_marginRight="20dp"
            android:text="Update"
            android:textColor="#FFF"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:visibility="gone"
            android:id="@+id/clear_button"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:visibility="gone"
            android:id="@+id/save_button"
            android:layout_below="@+id/linearLayout2"
            />

    </LinearLayout>



</RelativeLayout>