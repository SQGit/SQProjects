<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="match_parent"
    android:background="#BF000000"
    android:orientation="vertical">


    <TextView
        android:id="@+id/nav_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/logout_icon"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <View
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#97c626" />



    <TextView
        android:id="@+id/nav_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/profile_icon"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <View
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#97c626" />



    <TextView
        android:id="@+id/nav_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Mobile No"
        android:inputType="number"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ph_xxhdpi"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

  <!--  <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#97c626" />
-->

    <TextView
        android:id="@+id/nav_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="60dp"
        android:drawablePadding="30dp"
        android:paddingLeft="30dp"
        android:gravity="left|center"
        android:layout_marginLeft="30dp"
        android:textColor="#FFFFFF"
        android:textSize="35sp"/>


    <View
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#97c626" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/nav_flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlashLight On/Off"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/flash_xhdpi"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />


    <Switch
        android:id="@+id/mySwitchs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
       />


</LinearLayout>



    <View
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#97c626"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/nav_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location On/Off"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/location_icon"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            
            />

        </LinearLayout>
</LinearLayout>