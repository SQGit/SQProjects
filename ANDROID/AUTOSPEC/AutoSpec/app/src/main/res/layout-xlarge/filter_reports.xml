<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
android:orientation="vertical">


<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-145dp"
        android:background="@drawable/all_text_head"
        android:ems="8"
        android:gravity="center"
        android:padding="10dp"
        android:rotation="-90"
        android:text="Filter Reports"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="40sp" />


</LinearLayout>

<Button
    android:id="@+id/btn_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/btn_back2"
    android:drawableLeft="@drawable/back_icon"
    android:ems="4"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:text="Back"
    android:textAllCaps="false"
    android:textColor="#FFF"
    android:textSize="35sp" />


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="90dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/rental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2054be"
                    android:layout_marginStart="50dp"
                    android:text="Rental Agreement No"/>

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_agreementno"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="50dp"
                    android:gravity="start"
                    android:layout_marginTop="-20dp"
                    android:textColor="#2054be"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:ms_arrowColor="#2054be"
                    app:ms_arrowSize="20dp"
                    app:ms_hintColor="#2054be"
                    app:ms_multiline="false"
                    app:ms_thickness="0.1dp">
                </fr.ganfra.materialspinner.MaterialSpinner>


                <View
                    android:layout_width="250dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="-50dp"
                    android:background="#97c626">
                </View>
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/uunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#2054be"
                        android:layout_marginStart="50dp"
                        android:text="Unit No"/>


                    <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_unitno"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="#2054be"
                    android:textSize="20sp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="50dp"
                    android:textStyle="bold"
                    app:ms_arrowColor="#2054be"
                    app:ms_arrowSize="20dp"
                    app:ms_hintColor="#2054be"
                    app:ms_multiline="false"
                    app:ms_thickness="0.1dp">
                </fr.ganfra.materialspinner.MaterialSpinner>



                <View
                    android:layout_width="250dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="-50dp"
                    android:background="#97c626">

                </View>
                    </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <Button
            android:id="@+id/btn_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/btn_back2"
            android:ems="4"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:text="Filter"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="820dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#35476B"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Agreement No"
            android:textColor="#FFF"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit No"
            android:textColor="#FFF"
            android:textSize="23sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:id="@+id/textView3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Inspection"
            android:id="@+id/textView4"
            android:layout_marginLeft="90dp"
            android:textColor="#FFF"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginLeft="-60dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clipToPadding="false"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="1dp"
                    android:layout_marginTop="-12dp"
                    android:paddingBottom="36dip"
                    android:paddingTop="16dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</RelativeLayout>